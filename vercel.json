{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/client/dist/static/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/client/dist/favicon.ico"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/client/dist/assets/$1"
    },
    {
      "src": "^/(.*)",
      "dest": "/client/dist/index.html"
    }
  ]
}
