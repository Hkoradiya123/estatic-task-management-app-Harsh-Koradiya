{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/index.js" },
    { "source": "/static/(.*)", "destination": "/client/dist/static/$1" },
    { "source": "/favicon.ico", "destination": "/client/dist/favicon.ico" },
    { "source": "/assets/(.*)", "destination": "/client/dist/assets/$1" },
    { "source": "/(.*)", "destination": "/client/dist/index.html" }
  ]
}
